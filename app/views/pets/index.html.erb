<h1>Listing pets</h1>

<table>
  <tr>
    <th>Breed</th>
    <th>Name</th>
    <th>Person</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.breed %></td>
    <td><%= pet.name %></td>
    <td><%= pet.person_id %></td>
    <td><%= link_to 'Show', pet %></td>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

